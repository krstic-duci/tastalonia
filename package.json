{
  "name": "tastalonia",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@reduxjs/toolkit": "^1.4.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "axios": "^0.21.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-spinners": "^0.9.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "test": "react-scripts test --verbose=false",
    "coverage": "npm run test -- --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "client": "react-scripts start",
    "server": "json-server -w db.json",
    "start": "npm-run-all -p -l client server",
    "linter": "npm-run-all -s lint:prettier lint:eslint",
    "lint:prettier": "npx prettier --write src/**/*.js",
    "lint:eslint": "npx eslint src/**/*.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "rules": {
      "eqeqeq": "off",
      "no-duplicate-imports": "error",
      "max-len": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-emotion": "^10.0.33",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint-config-prettier": "^6.11.0",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:prettier & npm run lint:eslint"
    }
  }
}
